<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExamHunter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="android:windowBackground">@drawable/background</item>-->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item><!--purple_700-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="spinnerStyle">@style/spinner_style</item>

        <item name="android:textViewStyle">@style/TextView</item>
        <item name="editTextStyle">@style/editext</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:popupMenuStyle">@style/popupBGStyle</item>
<!--        <item name="itemTextAppearance">@style/itemTextStyle.AppTheme</item>-->
        <!-- Customize your theme here. -->
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="fontFamily">@font/sfui_text_regular</item>

    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="fontFamily">@font/sfui_text_regular</item>
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

<style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:padding">4dp</item>
    <item name="android:textSize">@dimen/space_16sp</item>
        <item name="android:textColor">@color/Accent_color</item>
</style>
    <style name="editext" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sfuitext_medium</item>
        <item name="android:textSize">@dimen/space_14sp</item>
        <item name="background">@drawable/drawable_edit_text_shadow_bg</item>
    </style>
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="fontFamily">@font/sfuitext_semibold</item>
    </style>

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/sfui_text_regular</item>

        <item name="colorAccent">@color/green_500</item>
        <item name="android:textColorSecondary">@color/light_black</item>
    </style>

    <style name="RadioBtnStyle" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/sfui_text_regular</item>

        <item name="colorAccent">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/light_black</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.ExamHunter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExamHunter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.PdfView.SelectedTheme" parent="@style/Theme.PdfView.Light">
