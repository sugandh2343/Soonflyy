    <style name="fullScreenAlertDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="fontFamily">@font/sfui_text_regular</item>

        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
