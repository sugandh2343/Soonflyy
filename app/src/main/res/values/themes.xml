        <item name="pdfView_actionBarTint">@color/primary_color</item>
        <item name="pdfView_downloadIconTint">@color/white</item>
        <item name="fontFamily">@font/sfui_text_regular</item>

        <item name="pdfView_downloadIcon">@drawable/ic_baseline_cloud_download_24</item>

