<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_class"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="class:10th"
                            android:fontFamily="@font/sfuitext_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/space_10sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/black" />

                    <TextView
                        android:id="@+id/tv_section"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/sfuitext_medium"
                        android:text="Section:B"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_10sp" />

                        <View
                            android:visibility="gone"
                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/black" />
<!--                    </LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:gravity="end|center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_view_class"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Class"
                            android:textColor="@color/graient1"
                            android:fontFamily="@font/sfuitext_semibold"
                            android:textSize="@dimen/space_10sp" />

                        <View

                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:background="@color/graient1" />

                        <TextView
                            android:id="@+id/tv_update_schedule"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Update Schedule"
                            android:textColor="@color/graient1"
                            android:fontFamily="@font/sfuitext_semibold"
                            android:textSize="@dimen/space_10sp" />
                        <ImageView
                            android:id="@+id/iv_remove_period"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_cancel_24"
                            android:layout_marginStart="@dimen/space_4dp"/>
                    </LinearLayout>

            </LinearLayout>





</LinearLayout>