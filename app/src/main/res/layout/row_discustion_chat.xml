<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lin_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                                android:id="@+id/img_edit"
                                android:layout_width="@dimen/space_30dp"
                                android:layout_height="@dimen/space_30dp"
                                android:layout_alignParentEnd="true"
                                android:padding="6dp"
                                android:src="@drawable/menu_icon"
                                app:tint="@color/black" />

                        <androidx.cardview.widget.CardView
                                android:id="@+id/cv_edi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/img_edit"
                                android:layout_marginLeft="-81dp"
                                android:layout_marginTop="@dimen/space_10"
                                android:padding="3dp"
                                android:visibility="gone">

                                <LinearLayout
                                        android:id="@+id/liner_edit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                                android:id="@+id/dailog_delete"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/dailog_edit"
                                                android:drawableStart="@drawable/ic_baseline_delete_24"
                                                android:drawableTint="@color/red"
                                                android:text="Delete"
                                                android:textAllCaps="false"
                                                android:textColor="@color/red"
                                                android:textSize="14sp"
                                                android:textStyle="normal"
                                                app:drawableTint="@color/red"
                                                tools:ignore="ObsoleteLayoutParam" />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <LinearLayout
                        android:padding="4dp"
                        android:id="@+id/lin_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/space_5dp"
                        android:orientation="horizontal">

                        <TextView
                                android:id="@+id/profile_text"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_cart_circle"
                            android:backgroundTint="@color/graient2"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="A"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                        android:id="@+id/tv_Name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="UnName"
                                        android:padding="3dp"
                                        android:textColor="@color/black"
                                    android:fontFamily="@font/sfuitext_medium"
                                        android:textSize="@dimen/space_12sp"
                                        />

                                <TextView
                                    android:id="@+id/tv_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="3dp"
                                    android:text="helovbjkn"
                                    android:layout_marginEnd="8dp"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/space_13sp"
                                    android:fontFamily="@font/sfuitext_semibold"
                                    android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                                android:id="@+id/tv_countnumber"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="0dp"
                                android:background="@drawable/bg_cart_circle"
                                android:backgroundTint="@color/green"
                                android:textStyle="bold"
                                android:padding="4dp"
                                android:text=""
                            android:fontFamily="@font/sfuitext_medium"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                </LinearLayout>


        </LinearLayout>


</RelativeLayout>