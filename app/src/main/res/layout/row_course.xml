<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/bg_round_red_outline"
android:padding="4dp"
        android:layout_margin="4dp"
        android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                        android:id="@+id/lnr_top"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/imgCourse"
                                android:backgroundTint="@color/rec_bg"
                                android:background="@drawable/bg_button"
                                android:layout_width="match_parent"
                                android:src="@drawable/splash_screen"
                                android:layout_height="232dp"/>
                        <ProgressBar

                       android:layout_centerInParent="true"

                                android:layout_gravity="center"
                                android:id="@+id/progressBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />



                </RelativeLayout>
                <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                        android:id="@+id/txtTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:padding="2dp"
                                        android:text="Internet of thing(IOT)"
                                        android:textAllCaps="false"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:textStyle="bold"/>
                                <TextView
                                        android:id="@+id/tv_discriptin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="2dp"                   android:text="Sharada Institute of Technology and Management "
                                        android:textAllCaps="false"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        />
                        </LinearLayout>
                        <ImageView
                                android:layout_weight="0.5"
                                android:padding="4dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/ic_baseline_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:tint="@color/red" />
                </LinearLayout>
        </LinearLayout>

</RelativeLayout>