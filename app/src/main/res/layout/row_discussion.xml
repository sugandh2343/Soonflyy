<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
    android:id="@+id/lin_main"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"

    android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical">
      <androidx.cardview.widget.CardView
          android:id="@+id/cv_main"
          android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:backgroundTint="@color/graient2"
                                              app:cardCornerRadius="@dimen/space_10dp">

                                              <RelativeLayout
                                                      android:id="@+id/rel_test"
                                                      android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:layout_marginBottom="18dp"
                                                      android:background="@drawable/bg_button"
                                                      android:backgroundTint="@color/graient1"
                                                      android:gravity="center">

                                                  <RelativeLayout
                                                      android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:gravity="center"
                                                      android:orientation="horizontal"
                                                      android:padding="4dp"
                                                      tools:ignore="UseCompoundDrawables">

                                                      <TextView
                                                          android:id="@+id/tv_class_name"
                                                          android:layout_width="wrap_content"
                                                          android:layout_height="wrap_content"
                                                          android:layout_alignParentStart="true"
                                                          android:gravity="center"
                                                          android:padding="4dp"
                                                          android:text="Class-12th"
                                                          android:textColor="@color/white"
                                                          android:fontFamily="@font/sfuitext_semibold"
                                                          android:textSize="16sp" />

                                                      <LinearLayout
                                                          android:layout_width="40dp"
                                                          android:layout_height="40dp"
                                                          android:layout_alignParentEnd="true"
                                                          android:layout_gravity="center"
                                                          android:background="@drawable/bg_cart_circle"
                                                          android:backgroundTint="@color/red"
                                                          android:gravity="center"
                                                          android:padding="4dp">

                                                          <TextView
                                                              android:id="@+id/tv_countnumber"
                                                              android:layout_width="wrap_content"
                                                              android:layout_height="wrap_content"
                                                              android:layout_gravity="center"
                                                              android:layout_marginEnd="0dp"
                                                              android:background="@drawable/bg_cart_circle"
                                                              android:backgroundTint="@color/red"
                                                              android:padding="4dp"
                                                              android:text="13"
                                                              android:textAlignment="center"
                                                              android:textColor="@color/white"
                                                              android:textSize="13sp"
                                                             android:fontFamily="@font/sfuitext_medium" />
                                                      </LinearLayout>


                                                  </RelativeLayout>

                                              </RelativeLayout>
      </androidx.cardview.widget.CardView>


</LinearLayout>