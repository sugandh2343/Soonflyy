<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_smoke"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/lin_about"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"
            android:orientation="horizontal"
            android:padding="@dimen/space_10"
            android:weightSum="2">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="@dimen/space_24dp"
                    android:layout_margin="@dimen/space_4"
                    android:src="@drawable/s_profile_edit" />

                <TextView
                    android:layout_marginStart="@dimen/space_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:fontFamily="@font/sfuitext_semibold"
                    android:textSize="@dimen/space_16sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black" />

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_about_down"
                android:layout_height="@dimen/space_30"
                android:layout_gravity="end"
                android:src="@drawable/ic_arrow_down"
                android:layout_width="@dimen/space_30"
                app:tint="@color/light_black" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lin_about_detail"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/white_smoke"
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_margin="@dimen/space_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:background="@drawable/bg_rounded_corner"
                        android:id="@+id/et_about_message"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:padding="6dp"
                        android:hint="Write here"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/sfuitext_semibold" />


                </LinearLayout>



            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_update"
                android:layout_margin="@dimen/space_20"
                android:layout_width="@dimen/button_small_size"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/space_16dp"
                android:text="@string/update"
                android:textSize="13sp"
                android:fontFamily="@font/sfuitext_semibold"
                android:textAllCaps="false" />



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>