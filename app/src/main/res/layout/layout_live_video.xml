<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_20dp"
        android:layout_marginTop="@dimen/space_8dp"
        android:id="@+id/lin_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button">

            <RelativeLayout
                android:id="@+id/rel_btn_live"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_cart_circle"
                android:backgroundTint="@color/primary_color"
                android:gravity="center"
                android:padding="@dimen/space_5"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/exo_icon_play" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_btn_live"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/space_10"
                android:layout_marginTop="@dimen/space_6"
                android:layout_marginBottom="@dimen/space_10"
                android:fontFamily="@font/sfuitext_semibold"
                android:gravity="center"
                android:text="Upload Recorded Demo Video"
                android:textColor="@color/white"
                android:textSize="@dimen/space_14sp"
                android:visibility="visible" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
