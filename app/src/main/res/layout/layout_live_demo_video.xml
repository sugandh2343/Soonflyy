<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lin_assign"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/s_background_white"
        android:gravity="center"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_40dp"
            android:background="@drawable/edit_box_round_corner"
            android:backgroundTint="@color/graient1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_live"
                android:layout_width="20dp"
                android:layout_height="@dimen/space_20dp"
                android:layout_marginStart="@dimen/space_6dp"
                android:src="@drawable/s_demo_video_white"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_demo_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_4dp"
                android:fontFamily="@font/sfuitext_semibold"
                android:text="Demo Classes"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/space_6dp"
                android:textSize="@dimen/space_14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>