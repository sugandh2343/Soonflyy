<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_Pannel.T_ChapterDetailFragment">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/view2"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lin_live_class"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <ImageView
                        android:id="@+id/iv_liveclass"
                        android:layout_width="24dp"
                        android:layout_height="@dimen/space_24dp"
                        android:src="@drawable/ic_live"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tv_liveclass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_4dp"
                        android:text="Live Classes"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfuitext_semibold"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_width="@dimen/space_1dp"
                    android:layout_height="50dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/lin_video"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <ImageView
                        android:id="@+id/iv_video"

                        android:layout_width="24dp"
                        android:layout_height="@dimen/space_24dp"
                        android:src="@drawable/s_video_icon"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tv_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_4dp"
                        android:text="Video"
                        android:fontFamily="@font/sfuitext_semibold"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view_chpter"
                    android:layout_width="@dimen/space_1dp"
                    android:layout_height="50dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/lin_note"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <ImageView
                        android:id="@+id/iv_note"

                        android:layout_width="24dp"
                        android:layout_height="@dimen/space_24dp"
                        android:layout_marginStart="@dimen/space_4dp"
                        android:src="@drawable/s_notes_icon"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tv_note"
                        android:fontFamily="@font/sfuitext_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_10dp"
                        android:layout_marginTop="@dimen/space_10dp"
                        android:layout_marginBottom="@dimen/space_10dp"
                        android:padding="4dp"
                        android:paddingHorizontal="@dimen/space_10dp"
                        android:text="Notes"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
                <!-- android:layout_marginLeft="@dimen/space_7dp"-->
                <View
                    android:id="@+id/view5"
                    android:layout_width="@dimen/space_1dp"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/lin_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_notice"
                        android:layout_width="@dimen/space_24dp"
                        android:layout_height="@dimen/space_24dp"
                        android:src="@drawable/s_dpp_icon" />

                    <TextView
                        android:id="@+id/tv_notice"
                        android:fontFamily="@font/sfuitext_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_4dp"
                        android:paddingHorizontal="@dimen/space_10dp"
                        android:text="DPP"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view6"
                    android:layout_width="@dimen/space_1dp"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/lin_test"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_test"
                        android:layout_width="24dp"
                        android:layout_height="@dimen/space_24dp"
                        android:src="@drawable/test_icon"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tv_test"
                        android:fontFamily="@font/sfuitext_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_4dp"
                        android:text="Test"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearlayout"
        android:background="@color/black" />

    <include
        android:id="@+id/include_assign_profile"
        layout="@layout/row_assign_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/frame_layout_live"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_assign_profile"
        android:layout_marginTop="8dp">


    </FrameLayout>

</RelativeLayout>