<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
    android:background="@drawable/drawable_shadow_bg"
        android:layout_height="?attr/actionBarSize">
<!--        <LinearLayout-->
<!--                android:background="@drawable/drawable_shadow_bg"-->
<!--                android:padding="4dp"-->
<!--                android:orientation="horizontal"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="?attr/actionBarSize">-->
                <LinearLayout
                        android:weightSum="2"
                        android:id="@+id/lnr_top"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                    android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                                android:padding="4dp"
                                android:id="@+id/lin_school"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_school"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/school_coaching"
                                        android:textColor="@color/black"
                                        android:textAllCaps="false"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/sfuitext_bold" />
                                <View
                                        android:id="@+id/view_school"
                                        android:visibility="visible"
                                        android:layout_gravity="center"
                                        android:layout_margin="3dp"
                                        android:background="@color/graient1"
                                        android:layout_width="120dp"
                                        android:layout_height="2dp"/>
                        </LinearLayout>
                        <View
                                android:layout_marginStart="0dp"
                                android:layout_gravity="center"
                                android:background="@color/gray"
                                android:layout_width="2dp"
                                android:layout_height="20dp"/>
                        <LinearLayout
                                android:id="@+id/lin_tutor"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_alignParentEnd="true"
                                android:layout_width="0dp"
                                android:padding="4dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Tutor"
                                        android:textColor="@color/black"
                                        android:textAllCaps="false"
                                        android:textSize="16sp"
                                    android:fontFamily="@font/sfuitext_bold"
                                         />
                                <View
                                        android:id="@+id/view_tutor"
                                        android:visibility="gone"
                                        android:layout_gravity="center"
                                        android:layout_margin="3dp"
                                        android:background="@color/graient1"
                                        android:layout_width="100dp"
                                        android:layout_height="2dp"/>
                        </LinearLayout>

                </LinearLayout>

<!--        </LinearLayout>-->
</LinearLayout>