<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Student_Pannel.Student_Notice_Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/light_grey"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_notice_sno"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="01"
            android:textSize="@dimen/space_13sp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:paddingStart="@dimen/space_8dp"
            android:paddingEnd="@dimen/space_8dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/space_1dp"
            />
        <TextView
            android:id="@+id/tv_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Live classes of internet of...."
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingStart="@dimen/space_8dp"
            android:paddingEnd="@dimen/space_8dp"
            android:textSize="@dimen/space_13sp"
            android:textColor="@color/black"
            android:background="@color/white"                    android:layout_marginEnd="@dimen/space_1dp"

            />
        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="11-02-22 | 05:20AM"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/space_8dp"
            android:paddingEnd="@dimen/space_8dp"
            android:textSize="@dimen/space_13sp"
            android:textColor="@color/black"
            android:background="@color/white"
            />
    </LinearLayout>


</LinearLayout>