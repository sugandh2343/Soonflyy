<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rel_login_now"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"


        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/signup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Please"
            android:textAlignment="center"
            android:textSize="@dimen/space_18sp"
          android:fontFamily="@font/sfuitext_bold"/>

        <View
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/space_2dp"
            android:background="@color/primary_color"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:background="@drawable/bottom_line"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <EditText

                android:id="@+id/et_unique_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_baseline_assignment_24"
                android:drawablePadding="@dimen/space_10dp"
                android:hint="ID"
                android:layout_weight="1"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYXZabcdefghijklmnopqrstuvwxyz1234567890"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                app:drawableTint="@color/black" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_verify"
                    android:layout_width="@dimen/space_50dp"
                    android:layout_height="25dp"
                    android:text="Verify"
                    android:background="@drawable/bg_button"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sfuitext_semibold"
                    android:textSize="@dimen/space_12sp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/space_8dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:background="@drawable/bottom_line"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:backgroundTintMode="@null"
                    android:drawableStart="@drawable/password"
                    android:drawablePadding="@dimen/space_8"
                    android:drawableTint="@color/black"
                    android:hint="Password"
                    android:inputType="textPassword"

                    android:textColor="@color/black"
                    android:textSize="@dimen/space_16sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/toggle_img"
                    android:layout_width="@dimen/space_20dp"
                    android:layout_height="@dimen/space_20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/space_16dp"
                    android:src="@drawable/hidden_password"
                    app:tint="@color/black" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="@dimen/space_30dp"
                android:gravity="center"
                android:text="Or"
                android:textColor="@color/black"
                android:textSize="@dimen/space_18sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30dp"
            android:text="Full Name"
            android:textColor="@color/black"
            android:textSize="@dimen/all_tvsize16"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:background="@drawable/bottom_line"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="@dimen/space_10dp"
            android:hint="Your Name"
            android:textColor="@color/black"

            app:drawableTint="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_mobile_num"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bottom_line"
            android:drawableStart="@drawable/ic_baseline_phone_iphone_light_black_24dp"
            android:drawablePadding="@dimen/space_10dp"
            android:drawableTint="@color/black"
            android:hint="Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/space_3dp"
            android:text="Please fill this field*"
            android:textColor="@color/red"
            android:textSize="@dimen/all_tvsize16"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bottom_line"
            android:drawableStart="@drawable/ic_baseline_mail_light_black_24dp"
            android:drawablePadding="@dimen/space_10dp"
            android:drawableTint="@color/black"
            android:hint="Email-ID"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:id="@+id/lin_student_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_father"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:background="@drawable/bottom_line"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="@dimen/space_10dp"
                android:hint="Father's Name"
                android:textColor="@color/black"

                app:drawableTint="@color/black" />

            <TextView
                android:id="@+id/tv_dob"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:background="@drawable/bottom_line"
                android:drawableStart="@drawable/ic_baseline_calendar_month_24"
                android:drawablePadding="@dimen/space_10dp"
                android:hint="Date of birth"
                android:textColor="@color/black"

                app:drawableTint="@color/black" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lin_class_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lin_class"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="@dimen/space_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:fontFamily="@font/sfuitext_semibold"
                    android:text="Class"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:elevation="1dp">


                        <Spinner
                            android:id="@+id/class_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autofillHints="Select your Company Name"
                            android:overlapAnchor="false">

                        </Spinner>
                        <TextView
                            android:id="@+id/tv_class"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/drawable_edit_text_shadow_bg"
                            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_black_24dp"
                            android:fontFamily="@font/sfuitext_medium"
                            android:textSize="@dimen/tv_14sp"
                            android:hint="Select Class"
                            android:inputType="text"
                            android:padding="13dp"
                            android:textColor="@color/black"
                            tools:ignore="TextViewEdits" />


                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lin_section"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="@dimen/space_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:fontFamily="@font/sfuitext_semibold"
                    android:text="Section"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:elevation="1dp">


                        <Spinner
                            android:id="@+id/section_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autofillHints="Select your Company Name"
                            android:overlapAnchor="false">

                        </Spinner>
                        <TextView
                            android:id="@+id/tv_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/drawable_edit_text_shadow_bg"
                            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_black_24dp"
                            android:fontFamily="@font/sfuitext_medium"

                            android:hint="Select Section"
                            android:inputType="text"
                            android:padding="13dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            tools:ignore="TextViewEdits" />


                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:background="@drawable/bottom_line"
                android:inputType="textPersonName"
                 android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="@dimen/space_10dp"
                android:hint="Address"
                android:textColor="@color/black"

                app:drawableTint="@color/black" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:layout_marginRight="@dimen/space_5dp"
            android:background="@color/light_gray"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_16dp"
            android:layout_marginBottom="10dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/white"
           />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rel_login_now"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout18">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already registered ?"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_14sp"
            android:fontFamily="@font/sfuitext_semibold">

        </TextView>

        <TextView
            android:id="@+id/tv_s_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/Accent_color"
            android:textSize="@dimen/tv_14sp"
           android:fontFamily="@font/sfuitext_semibold">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_outline_24"
                android:visibility="gone"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/login_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_10dp"
                android:text="Exiting User? Login Now "
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</RelativeLayout>