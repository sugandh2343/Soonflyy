<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:id="@+id/lin_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="3"
        android:background="@color/time_table_1"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:visibility="visible">

        <TextView

            android:id="@+id/tv_period"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:ellipsize="end"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:fontFamily="@font/sfuitext_medium"
            android:textSize="@dimen/space_12sp" />
        <View
            android:background="@color/light_grey"
            android:layout_width="1dp"
            android:layout_marginStart="@dimen/space_2dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_subject"
            android:layout_weight="1.2"
                 android:text="hindi"
            android:background="@drawable/bg_rounded_corner"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:fontFamily="@font/sfuitext_medium"
            android:backgroundTint="@color/white"
            android:layout_height="30dp"
            />
        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:padding="6dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_box_round_corner"
            android:orientation="horizontal"
            >

         <Spinner
             android:text="value"
             android:textColor="@color/black"
             android:layout_width="30dp"
                 android:textAlignment="center"
             android:backgroundTint="@color/black"
             android:layout_height="wrap_content"
             >

         </Spinner>





        </LinearLayout>
        <View
            android:background="@color/light_grey"
            android:layout_width="1dp"
            android:layout_marginStart="@dimen/space_1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1.2"
            android:weightSum="2"
            android:layout_width="0dp"
            android:padding="6dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
           android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/tv_s_time"
                android:layout_weight="1"
                android:background="@drawable/edit_box_round_corner"
                android:text=""
                android:gravity="center"
               android:textColor="@color/black"
                android:layout_width="0dp"
                android:textSize="10sp"
                android:fontFamily="@font/sfuitext_medium"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_4dp"
                android:paddingTop="@dimen/space_4dp"
               />
            <TextView
                android:id="@+id/tv_to"
                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:layout_marginEnd="@dimen/space_1dp"
                android:ellipsize="end"
                android:gravity="center"
                android:text="To"
                android:fontFamily="@font/sfuitext_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/space_12sp" />

            <TextView
                android:id="@+id/tv_e_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_4dp"
                android:paddingTop="@dimen/space_4dp"
                android:layout_weight="1"
                android:background="@drawable/edit_box_round_corner"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/sfuitext_medium"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="10sp">

            </TextView>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>