<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:weightSum="6"
            android:background="@color/light_grey"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView

                android:id="@+id/tv_period"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/space_1dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/space_8dp"
                android:paddingEnd="@dimen/space_8dp"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="@dimen/space_13sp" />
            <View
                android:background="@color/white"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_class"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/space_1dp"
                android:layout_marginEnd="@dimen/space_1dp"
                android:gravity="center"
                android:paddingStart="@dimen/space_8dp"
                android:paddingEnd="@dimen/space_8dp"
                android:text="Class"
                android:textColor="@color/black"
                android:textSize="@dimen/space_13sp"

                />
            <View
                android:background="@color/white"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_secion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/space_1dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/space_8dp"
                android:paddingEnd="@dimen/space_8dp"
                android:text="Section"
                android:textColor="@color/black"
                android:textSize="@dimen/space_13sp" />
            <View
                android:background="@color/white"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_subject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/space_6dp"


                android:gravity="center"

                android:text="Download"
                android:backgroundTint="@color/gray"
                android:drawableEnd="@drawable/ic_arrow_down_24"
                android:textColor="@color/black"
                android:textSize="@dimen/space_13sp"

                />
            <View
                android:background="@color/white"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/space_1dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/space_8dp"
                android:paddingEnd="@dimen/space_8dp"
                android:text="Date &amp;Time"
                android:textColor="@color/black"
                android:textSize="@dimen/space_13sp" />
            <View
                android:background="@color/white"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/tv_action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ok_48px"
                    />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_cancel_24"
                    >

                </ImageView>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>