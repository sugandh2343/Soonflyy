<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/space_6"
        android:elevation="@dimen/space_5"
        app:cardBackgroundColor="@color/light_grey"
        app:cardCornerRadius="@dimen/space_15">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/logo_iot"
                        app:riv_corner_radius="@dimen/space_10dp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2.1"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_5"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/header_tittle_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject course1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <RadioButton
                            android:id="@+id/radio_title_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:button="@null"
                            android:drawableRight="@android:drawable/btn_radio"
                            android:drawablePadding="10dp"
                            android:text="Artificial Inteligence"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:fontFamily="@font/sfuitext_semibold"
                            android:textSize="16sp" />




                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>