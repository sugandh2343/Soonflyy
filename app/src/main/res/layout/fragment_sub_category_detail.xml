<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Student_Pannel.Sub_categoryDetail">
<androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/lin_course_thumbnail"

                android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/img"

                                android:backgroundTint="@color/rec_bg"
                                android:background="@drawable/bg_button"
                                android:layout_width="match_parent"
                                android:src="@drawable/splash_screen"
                                android:layout_height="232dp"/>
                        <ImageView
                                android:id="@+id/save_img"

                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="8dp"
                                android:layout_gravity="end"
                                android:layout_marginTop="-20dp"
                                android:background="@drawable/bg_cart_circle"
                                android:src="@drawable/ic_baseline_bookmark_24"
                                app:tint="@color/white" />

                        <LinearLayout
                                android:layout_margin="5dp"
                                android:padding="4dp"
                                android:weightSum="4"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                        android:layout_weight="2"
                                        android:orientation="vertical"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">
                                        <TextView
                                                android:id="@+id/tv_category"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="5dp"
                                                android:padding="2dp"
                                                android:text="Internet of thing(IOT)"
                                                android:textAllCaps="false"
                                                android:textColor="@color/black"
                                                android:textSize="14sp"
                                                android:textStyle="bold"/>
                                        <TextView
                                                android:id="@+id/tv_discriptin"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:padding="2dp"                   android:text="Sharada Institute of Technology and Management "
                                                android:textAllCaps="false"
                                                android:textColor="@color/black"
                                                android:textSize="12sp"
                                                />
                                </LinearLayout>
                                <LinearLayout
                                        android:layout_weight="2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:background="@drawable/bg_button"
                                        android:orientation="horizontal">

                                        <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:background="@drawable/bg_cart_circle"
                                                android:padding="8dp"
                                                android:src="@drawable/ic_baseline_library_books_24"
                                                app:tint="@color/white" />

                                        <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:padding="2dp"
                                                android:text="My Subscriptions :"
                                                android:textAllCaps="false"
                                                android:textColor="@color/white"
                                                android:textSize="16sp"
                                                android:textStyle="bold">

                                        </TextView>

                                </LinearLayout>
                        </LinearLayout>


                </LinearLayout>
                <RelativeLayout
                        android:id="@+id/rel_deatl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                        android:id="@+id/txt_pr_detail"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginEnd="4dp"
                                        android:layout_marginBottom="4dp"
                                        android:gravity="start"
                                        android:text="About Course"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/txt_pr_detail"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginEnd="8dp"
                                        android:layout_marginBottom="8dp"
                                        android:text="@string/item_detail"
                                        android:textColor="@color/black">

                                </TextView>
                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginEnd="4dp"
                                        android:gravity="start"
                                        android:text="Rating"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />
                                <RatingBar
                                        android:padding="4dp"
                                        android:rating="2"
                                        android:numStars="5"
                                        android:stepSize="0.25"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                        </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="4dp"
                                android:gravity="start"
                                android:text="Course Provides"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        <LinearLayout
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="UseCompoundDrawables">
                                <ImageView
                                        android:padding="4dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/bg_cart_circle"
                                        android:layout_width="@dimen/space_20dp"
                                        android:layout_height="@dimen/space_20"
                                        app:tint="@color/black" />
                                <TextView
                                        android:gravity="center"
                                        android:padding="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="About Course"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />

                        </LinearLayout>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                        android:padding="4dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/bg_cart_circle"
                                        android:layout_width="@dimen/space_20dp"
                                        android:layout_height="@dimen/space_20"
                                        app:tint="@color/black"
                                        tools:ignore="ContentDescription" />
                                <TextView
                                        android:gravity="center"
                                        android:padding="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="About Course"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />

                        </LinearLayout>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                        android:padding="4dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/bg_cart_circle"
                                        android:layout_width="@dimen/space_20dp"
                                        android:layout_height="@dimen/space_20"
                                        app:tint="@color/black" />
                                <TextView
                                        android:gravity="center"
                                        android:padding="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="About Course"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />

                        </LinearLayout>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:gravity="start"
                                android:layout_marginTop="5dp"
                                android:text="Course Offers"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        <LinearLayout
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                        android:padding="4dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/bg_cart_circle"
                                        android:layout_width="@dimen/space_20dp"
                                        android:layout_height="@dimen/space_20"
                                        app:tint="@color/black" />
                                <TextView
                                        android:gravity="center"
                                        android:padding="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="About Course"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />

                        </LinearLayout>
                </LinearLayout>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="start"
                android:text="Demo Videos"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
        </LinearLayout>

</androidx.core.widget.NestedScrollView>

</RelativeLayout>