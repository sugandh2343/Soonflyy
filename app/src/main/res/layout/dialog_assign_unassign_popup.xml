<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_main"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:layout_marginEnd="@dimen/space_10dp"
    android:paddingStart="@dimen/space_8dp"
    android:gravity="center_vertical"
    android:background="@drawable/drawable_edit_text_shadow_bg"
    android:paddingEnd="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/space_24dp"
        android:layout_height="@dimen/space_24dp"
        android:src="@drawable/unassign_con"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/space_12sp"
        android:textColor="@color/primary_color"
        android:text="Unassign"
        android:fontFamily="@font/sfuitext_semibold"
        android:layout_marginStart="@dimen/space_6dp"/>
    </LinearLayout>
</LinearLayout>