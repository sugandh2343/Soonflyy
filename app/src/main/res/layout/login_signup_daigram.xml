<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout

                android:padding="4dp"
                android:weightSum="2"
                android:id="@+id/lnr_top"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/login_logo_size120"
                            android:layout_height="@dimen/login_logo_size120"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="top"
                            android:layout_marginStart="-7dp"
                            android:src="@drawable/logo_new"
                            />

                        <TextView
                            android:visibility="gone"
                            android:layout_width="@dimen/login_logo_size120"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-2dp"
                            android:layout_marginTop="-14dp"
                            android:fontFamily="@font/lexend"
                            android:gravity="center"
                            android:letterSpacing="0.001"
                            android:text="@string/app_name_txt"
                            android:textAllCaps="true"
                            android:textSize="7dp"
                            android:textStyle="bold" />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:text="@string/best_learing_platform_for_you"
                                android:textColor="@color/black"
                                android:textAllCaps="false"
                                android:textSize="18sp"
                               android:fontFamily="@font/sfuitext_semibold" />
                </LinearLayout>
                <RelativeLayout

                        android:layout_weight="1"
                    android:layout_marginStart="@dimen/space_8dp"
                        android:layout_gravity="bottom"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_top_right_img"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"

                            android:scaleType="centerCrop"
                            android:src="@drawable/login_signup" />
                </RelativeLayout>

        </LinearLayout>

</RelativeLayout>