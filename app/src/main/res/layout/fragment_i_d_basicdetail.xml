<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Common_Package.IDSection.IDBasicdetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lin_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/liner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/space_10">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:padding="4dp"
                                    android:text="@string/add_basic_details"
                                    android:textAlignment="center"
                                    android:textColor="@color/graient2"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/sfuitext_bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginTop="10dp"
                                        android:padding="4dp"
                                        android:text="Name"
                                        android:textAllCaps="false"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/sfuitext_semibold"
                                         />

                                    <EditText
                                        android:id="@+id/et_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textPersonName"
                                        android:digits="@string/nameInputString"
                                        android:layout_marginTop="@dimen/space_10"
                                        android:singleLine="true"
                                        android:background="@drawable/drawable_edit_text_shadow_bg"
                                        android:hint="Enter here "
                                        android:padding="@dimen/space_12"
                                         />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:padding="4dp"
                                        android:text="Education"
                                        android:textAllCaps="false"
                                        android:textColor="@color/black"
                                       android:fontFamily="@font/sfuitext_semibold" />

                                    <EditText
                                        android:id="@+id/et_education"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/space_10"
                                        android:inputType="textPersonName"
                                        android:digits="@string/educationInputString"
                                        android:background="@drawable/drawable_edit_text_shadow_bg"
                                        android:hint="@string/enter_here"
                                        android:padding="@dimen/space_12"
                                        android:singleLine="true"
                                       />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:padding="4dp"
                                        android:text="Interest"
                                        android:textAllCaps="false"
                                        android:textColor="@color/black"
                                      android:fontFamily="@font/sfuitext_semibold"/>

                                    <EditText
                                        android:id="@+id/et_interest"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/space_10"
                                        android:inputType="textPersonName"
                                        android:digits="@string/inputStringWithCommaSapace"
                                        android:background="@drawable/drawable_edit_text_shadow_bg"
                                        android:hint="@string/enter_here"
                                        android:singleLine="true"
                                        android:padding="@dimen/space_12"
                                      />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_marginTop="10dp"
                                        android:padding="4dp"
                                        android:text="Workplace"
                                        android:textAllCaps="false"
                                        android:textColor="@color/black"
                                       android:fontFamily="@font/sfuitext_semibold" />

                                    <EditText
                                        android:id="@+id/et_workplace"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/space_10"
                                        android:background="@drawable/drawable_edit_text_shadow_bg"
                                        android:hint="@string/enter_here"
                                        android:padding="@dimen/space_12"
                                        android:inputType="textPersonName"
                                        android:singleLine="true"
                                         />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:padding="4dp"
                                        android:text="Work"
                                        android:textAllCaps="false"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/et_work"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/space_10"
                                        android:background="@drawable/drawable_edit_text_shadow_bg"
                                        android:hint="@string/enter_here"
                                        android:singleLine="true"
                                        android:inputType="textPersonName"
                                        android:padding="@dimen/space_12"
                                        android:textSize="@dimen/space_16" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_marginTop="10dp"
                                        android:padding="4dp"
                                        android:text="Address"
                                        android:textAllCaps="false"
                                        android:textColor="@color/black"
                                      android:fontFamily="@font/sfuitext_semibold" />

                                    <EditText
                                        android:id="@+id/et_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/space_10"
                                        android:background="@drawable/drawable_edit_text_shadow_bg"
                                        android:hint="@string/enter_here"
                                        android:padding="@dimen/space_12"
                                        android:digits="@string/addressInputString"
                                        android:inputType="textPersonName"
                                        android:singleLine="true"
                                       />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:padding="4dp"
                                    android:text="Photo"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/sfuitext_semibold" />

                                <LinearLayout
                                    android:id="@+id/lin_sub"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/space_4"
                                    android:background="@drawable/drawable_edit_text_shadow_bg"
                                    android:elevation="@dimen/space_5"
                                    android:gravity="center"

                                    android:orientation="vertical"
                                    android:padding="@dimen/space_6"
                                    android:visibility="visible">

                                    <ImageView
                                        android:id="@+id/iv_sub"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/upload_button" />
                                    <!--  </androidx.cardview.widget.CardView>-->

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/space_8"
                                        android:text="@string/upload_your_file_here_choose_file_form_your_device"
                                        android:textAlignment="center"
                                        android:textColor="#434242"
                                        android:fontFamily="@font/sfuitext_medium"
                                        android:textSize="@dimen/space_12sp" />

                                    <RelativeLayout
                                        android:id="@+id/rel_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:visibility="gone">

                                        <RelativeLayout

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <com.makeramen.roundedimageview.RoundedImageView
                                                android:id="@+id/img_upload_img"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:layout_centerInParent="true"
                                                android:scaleType="fitXY"
                                                android:src="@drawable/men_img"
                                                app:riv_corner_radius="12dp" />

                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:id="@+id/cancel_image"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignTop="@id/img_upload_img"
                                                android:layout_marginStart="-18dp"
                                                android:layout_marginLeft="-20dp"
                                                android:layout_marginTop="2dp"
                                                android:layout_toEndOf="@id/img_upload_img"
                                                android:src="@drawable/ic_baseline_cancel_24" />

                                        </RelativeLayout>

                                    </RelativeLayout>


                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lin_main"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_submit"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/submit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            />


                    </RelativeLayout>

                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

</RelativeLayout>