<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:weightSum="3"
        android:background="@color/light_grey"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_student"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Student"
            android:layout_weight=".5"
            android:textSize="@dimen/space_13sp"
            android:textColor="@color/black"
            android:paddingStart="@dimen/space_8dp"
            android:paddingEnd="@dimen/space_8dp"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/space_1dp"
            />
        <TextView
            android:id="@+id/tv_fee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Fee"
            android:gravity="center"
            android:layout_weight=".9"
            android:layout_marginStart="@dimen/space_1dp"
            android:paddingStart="@dimen/space_8dp"
            android:paddingEnd="@dimen/space_8dp"
            android:textSize="@dimen/space_13sp"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/space_1dp"

            />
        <LinearLayout
            android:layout_weight=".2"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_box_round_corner"
            android:orientation="horizontal"
            >




            <Spinner
                android:layout_marginStart="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_live"
                android:layout_centerInParent="true"
                android:text="Paid"
                android:textColor="@color/black"
                android:textSize="@dimen/space_12sp"
                android:textStyle="bold" />



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>