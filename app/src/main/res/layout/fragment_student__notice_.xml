<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Student_Pannel.Student_Notice_Fragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refresh_notice">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:visibility="gone"
            android:id="@+id/include_assign_to"
            layout="@layout/row_assign_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    <LinearLayout
    android:id="@+id/lin_notice_title"
    android:layout_width="match_parent"
    android:layout_height="35dp"
        android:weightSum="3"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="S.No."
        android:layout_weight="1.2"
        android:textSize="@dimen/space_14sp"
        android:textColor="@color/white"
        android:background="@color/black"
        android:paddingStart="@dimen/space_8dp"
        android:paddingEnd="@dimen/space_8dp"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/space_1dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Notice"

        android:gravity="center_vertical"
        android:layout_weight="0.8"
        android:paddingStart="@dimen/space_8dp"
        android:paddingEnd="@dimen/space_8dp"
        android:textSize="@dimen/space_14sp"
        android:textColor="@color/white"
        android:layout_marginEnd="@dimen/space_1dp"
        android:background="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Date &amp; time"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/space_14sp"
        android:textColor="@color/white"
        android:background="@color/black"
        />
</LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/student_notice_rv"/>
    </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>