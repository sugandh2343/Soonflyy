<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginEnd="@dimen/space_5"
                android:layout_marginBottom="@dimen/space_5"
                android:background="@drawable/drawable_edit_text_shadow_bg"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space_10">

                <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:text="Create Daily Practice Paper"
                                android:textAlignment="center"
                                android:textColor="@color/graient2"
                                android:textSize="16sp"
                                android:fontFamily="@font/sfuitext_bold" />

                        <View
                                android:layout_width="130dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:background="@color/black" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"

                            android:layout_marginStart="-7dp"
                                android:text="  DPP Topic*"

                                android:textColor="@color/black"
                               android:fontFamily="@font/sfuitext_semibold" />

                        <EditText
                                android:id="@+id/et_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="@dimen/space_10"
                                android:background="@drawable/drawable_edit_text_shadow_bg"
                                android:hint="Enter title"
                                android:padding="@dimen/space_12"
                                />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_10dp"
                                android:text=" Upload Paper "
                            android:layout_marginStart="-6dp"
                                android:textColor="@color/black"
                            android:fontFamily="@font/sfuitext_semibold"
                                />

                        <LinearLayout
                                android:id="@+id/lin_sub"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_4"
                                android:elevation="@dimen/space_5"
                                android:gravity="center"
                                android:orientation="vertical"

                                android:visibility="visible">

                                <ImageView
                                        android:id="@+id/iv_sub"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/upload_button" />
                                <!--  </androidx.cardview.widget.CardView>-->

                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/space_8"
                                        android:text="@string/upload_your_file_here_choose_file_form_your_device"
                                        android:textAlignment="center"
                                        android:textColor="#434242"
                                    android:fontFamily="@font/sfuitext_medium"
                                        android:textSize="@dimen/space_12" />
                                <TextView
                                    android:id="@+id/tv_selected_path"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/space_6"
                                    android:text=""
                                    android:textAlignment="center"
                                    android:fontFamily="@font/sfuitext_medium"
                                    android:textSize="@dimen/space_12sp" />

                                <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:visibility="gone">

                                        <com.makeramen.roundedimageview.RoundedImageView
                                                android:id="@+id/img_upload_img"
                                                android:layout_width="120dp"
                                                android:layout_height="120dp"
                                                android:layout_centerInParent="true"
                                                android:src="@color/red"
                                                app:riv_corner_radius="12dp" />

                                        <ImageView
                                                android:layout_width="@dimen/space_40dp"
                                                android:layout_height="@dimen/space_40dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_alignParentEnd="true"
                                                android:layout_marginEnd="90dp"
                                                android:layout_marginBottom="10dp"
                                                android:src="@drawable/add_button" />
                                </RelativeLayout>

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/space_10dp"
                                        android:orientation="vertical">

                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Marks"
                                            android:padding="@dimen/space_4dp"
                                                android:textAllCaps="false"
                                                android:textColor="@color/black"
                                               android:fontFamily="@font/sfuitext_semibold" />

                                        <EditText
                                                android:id="@+id/et_marks"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/space_10"
                                                android:background="@drawable/drawable_edit_text_shadow_bg"
                                                android:hint="Enter marks"
                                            android:inputType="number"

                                                android:padding="@dimen/space_12"
                                               />

                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:padding="4dp"
                                                android:text="Last Date of Submission"
                                                android:textAllCaps="false"
                                                android:textColor="@color/black"
                                              android:fontFamily="@font/sfuitext_semibold" />

                                        <TextView
                                                android:id="@+id/et_lastdate"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/space_10"
                                                android:background="@drawable/drawable_edit_text_shadow_bg"
                                                android:drawableEnd="@drawable/ic_baseline_calendar_month_24"
                                                android:drawableTint="@color/black"
                                                android:hint="Choose date"
                                                android:padding="@dimen/space_12"
                                            android:textSize="@dimen/space_14sp"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/sfuitext_medium"
                                                />
                                </LinearLayout>

                        </LinearLayout>


                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_upload"
                        android:layout_width="240dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"

                        android:layout_margin="12dp"
                        android:gravity="center"
                        android:text="Create"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        />

                <TextView
                        android:id="@+id/tv_back"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_10dp"
                        android:layout_marginTop="@dimen/space_5"
                        android:text="Cancel"
                        android:textAlignment="center"
                        android:textColor="@color/red"
                    android:fontFamily="@font/sfuitext_semibold"
                        android:textSize="16sp" />


        </LinearLayout>
</RelativeLayout>