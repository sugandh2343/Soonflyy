<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Student_Pannel.ResultFragment">


<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/refresh_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_exm_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sfuitext_semibold"
                android:text="Exam Duration: - hour"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/titel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Test on internet of things(IOT)"
                android:textColor="@color/black"
                android:fontFamily="@font/sfuitext_bold"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_result"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_10dp"
                android:background="@drawable/bg_button"
                android:backgroundTint="@color/green_100"
                android:gravity="center"
                android:text="Result: -"
                android:fontFamily="@font/sfuitext_medium"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:elevation="@dimen/space_5dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/light_grey"
                app:cardCornerRadius="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Total Questions"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:paddingStart="@dimen/space_16dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:layout_column="1"/>
                            <TextView
                                android:id="@+id/tv_total_question"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="-"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/space_8dp"
                                android:paddingEnd="@dimen/space_16dp"
                                android:layout_column="2"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Your Score"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:paddingStart="@dimen/space_16dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:layout_column="1"/>
                            <TextView
                                android:id="@+id/tv_ur_score"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="-"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/space_8dp"
                                android:paddingEnd="@dimen/space_16dp"
                                android:layout_column="2"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Passing score"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:paddingStart="@dimen/space_16dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:layout_column="1"/>
                            <TextView
                                android:id="@+id/tv_passing"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="-"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/space_8dp"
                                android:paddingEnd="@dimen/space_16dp"
                                android:layout_column="2"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Attempt Questions"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:paddingStart="@dimen/space_16dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:layout_column="1"/>
                            <TextView
                                android:id="@+id/tv_attempt"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="-"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/space_8dp"
                                android:paddingEnd="@dimen/space_16dp"
                                android:layout_column="2"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Non-attempt Questions"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:paddingStart="@dimen/space_16dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:layout_column="1"/>
                            <TextView
                                android:id="@+id/tv_non_attempt"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="-"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/space_8dp"
                                android:paddingEnd="@dimen/space_16dp"
                                android:layout_column="2"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Correct Answers"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:paddingStart="@dimen/space_16dp"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:layout_column="1"/>
                            <TextView
                                android:id="@+id/tv_correct"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="-"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/space_8dp"
                                android:paddingEnd="@dimen/space_16dp"
                                android:layout_column="2"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Incorrect Answers"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:paddingStart="@dimen/space_16dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:layout_column="1"/>
                            <TextView
                                android:id="@+id/tv_incorrect"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="-"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/space_8dp"
                                android:paddingEnd="@dimen/space_16dp"
                                android:layout_column="2"/>
                        </TableRow>
                    </TableLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/tv_download_test"
                android:visibility="gone"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Download test"
                android:drawableEnd="@drawable/ic_baseline_cloud_download_24"
                android:textAllCaps="false"
                android:textSize="@dimen/space_10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_8dp"
                android:drawablePadding="@dimen/space_4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_back_course"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Back to course"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_8dp"
                />
        </LinearLayout>


    </ScrollView>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>