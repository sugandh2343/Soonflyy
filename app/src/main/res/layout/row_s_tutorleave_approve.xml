                                android:layout_marginLeft="5dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_baseline_cancel_24"
                                >

                        </ImageView>

                </LinearLayout>
        </LinearLayout>
        <LinearLayout
