                        android:gravity="center"
                        android:drawableEnd="@drawable/ic_baseline_download_24"
                        android:drawableTint="@color/light_gray"
                        android:paddingStart="@dimen/space_4dp"
                        android:paddingEnd="@dimen/space_4dp"
                        android:text="Reason"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_9sp"

                        />
                <View
                        android:background="@color/white"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/tv_s_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
