                <TextView
                        android:id="@+id/tv_s_reason"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/space_1dp"
                        android:layout_marginEnd="@dimen/space_1dp"
