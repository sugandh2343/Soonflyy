                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_file_download"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/space_1dp"
                    android:layout_marginEnd="@dimen/space_1dp"
                    android:gravity="center"
                    android:paddingStart="@dimen/space_4dp"
                    android:paddingEnd="@dimen/space_4dp"
                    android:text="Download"
                    android:background="@drawable/bg_round_gradient_outline"

                    android:drawableRight="@drawable/ic_baseline_download_24"
                    android:drawableTint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_9sp"

                    />
                <View
                        android:background="@color/white"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="Date &amp; Time"
                        android:textColor="@color/black"
                    android:fontFamily="@font/sfuitext_medium"
                        android:textSize="@dimen/space_9sp" />
                <View
                        android:background="@color/white"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>

                <LinearLayout
                        android:gravity="center"
                        android:id="@+id/tv_action"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/iv_action_accept"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ok_48px"
                                />
                        <ImageView
                            android:id="@+id/iv_action_cancel"
                                android:layout_marginLeft="5dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_baseline_cancel_24"
                                >

                        </ImageView>

                </LinearLayout>
        </LinearLayout>
        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="6"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView

                        android:id="@+id/tv_s_student"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/space_1dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingStart="@dimen/space_8dp"
                        android:paddingEnd="@dimen/space_8dp"
                        android:text="Tutor"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_9sp" />

                <View
                        android:background="@color/white"
                        android:layout_width="2dp"
