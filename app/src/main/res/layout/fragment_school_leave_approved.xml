<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".YourSchooolPannel.SchoolCoachingSection.SchoolCoachingFragment.SchoolTutorLeaveApprovedFragment">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                >
                <include
                    android:id="@+id/lin_tutor_student"
                    layout="@layout/tab_student"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:elevation="6dp" />

                <LinearLayout

                    android:id="@+id/lin_t_table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    android:paddingTop="@dimen/space_4dp"
                    android:paddingBottom="@dimen/space_4dp"
                    android:gravity="center_vertical"
                        android:weightSum="4"
                        android:background="@color/black"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView

                                android:id="@+id/tv_h_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:text="Tutor"
                                android:textColor="@color/white"
                            android:fontFamily="@font/sfuitext_semibold"
                                android:textSize="@dimen/space_10sp" />

                        <View
                                android:background="@color/white"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>
                        <TextView
                                android:id="@+id/tv_reason"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Reason"
                            android:fontFamily="@font/sfuitext_semibold"
                                android:textColor="@color/white"
                                android:textSize="@dimen/space_10sp"

                                />
                        <View
                                android:background="@color/white"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>

                        <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:text="Date &amp; Time"
                            android:fontFamily="@font/sfuitext_semibold"
                                android:textColor="@color/white"
                                android:textSize="@dimen/space_10sp" />
                        <View
                                android:background="@color/white"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>

                        <TextView
                                android:id="@+id/tv_action"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:text="Action"
                            android:fontFamily="@font/sfuitext_semibold"
                                android:textColor="@color/white"
                                android:textSize="@dimen/space_10sp" />
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/lin_s_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/space_4dp"
                    android:paddingBottom="@dimen/space_4dp"
                    android:weightSum="6"
                    android:background="@color/black"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:text="Student"
                            android:fontFamily="@font/sfuitext_semibold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/space_10sp" />

                        <View
                            android:background="@color/white"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>
                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Class"
                            android:fontFamily="@font/sfuitext_semibold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/space_10sp"

                            />

                        <View
                            android:background="@color/white"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>
                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/sfuitext_semibold"
                            android:gravity="center"
                            android:text="Section"
                            android:textColor="@color/white"
                            android:textSize="@dimen/space_10sp"

                            />

                        <View
                            android:background="@color/white"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>
                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/sfuitext_semibold"
                            android:gravity="center"
                            android:text="Reason"
                            android:textColor="@color/white"
                            android:textSize="@dimen/space_10sp"

                            />
                        <View
                            android:background="@color/white"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:text="Date &amp; Time"
                            android:fontFamily="@font/sfuitext_semibold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/space_10sp" />
                        <View
                            android:background="@color/white"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:text="Action"
                            android:fontFamily="@font/sfuitext_semibold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/space_10sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_leave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

</RelativeLayout>