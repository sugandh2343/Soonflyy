<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Student_Pannel.Student_Notice_Fragment">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:weightSum="3"
                android:visibility="visible">
                <TextView
                        android:id="@+id/tv_notice_sno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="@dimen/text_size_XX_small"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:paddingStart="@dimen/space_8dp"
                        android:paddingEnd="@dimen/space_8dp"
                    android:fontFamily="@font/sfuitext_medium"
                        android:gravity="center_horizontal"
                        android:ellipsize="end"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1.2"
                        android:layout_marginEnd="@dimen/space_1dp"
                        />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="@dimen/space_1dp"
                    android:layout_weight="0.8"
                    android:background="@color/white"
                    android:paddingStart="@dimen/space_8dp"
                    android:paddingEnd="@dimen/space_8dp">
                        <TextView
                            android:id="@+id/tv_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginEnd="@dimen/space_1dp"
                            android:background="@color/white"
                            android:fontFamily="@font/sfuitext_medium"
                            android:text=""
                            android:linksClickable="true"
                            android:autoLink="all"
                            android:textColorLink="@color/graient2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_XX_small" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:visibility="gone"
                            android:id="@+id/rec_note_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>



                </LinearLayout>


                <TextView
                        android:id="@+id/tv_date_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:ellipsize="end"
                    android:layout_marginBottom="1dp"

                        android:paddingStart="@dimen/space_8dp"
                        android:paddingEnd="@dimen/space_8dp"
                        android:textSize="@dimen/text_size_XX_small"
                    android:layout_weight="1"
                    android:fontFamily="@font/sfuitext_medium"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        />
        </LinearLayout>

</RelativeLayout>