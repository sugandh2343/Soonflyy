<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/drawable_shadow_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_unassign_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/are_you_sure_you_want_to_unassign"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/sfuitext_semibold" />


        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="@color/primary_color"
            android:id="@+id/btn_unassign"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_gravity="center"

            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/unassign"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_10dp"
            android:layout_marginTop="@dimen/space_5"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:fontFamily="@font/sfuitext_semibold"
            android:textSize="14sp" />


    </LinearLayout>
</RelativeLayout>