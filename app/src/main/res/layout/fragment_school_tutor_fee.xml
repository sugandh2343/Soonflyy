<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourSchooolPannel.SchoolCoachingSection.SchoolCoachingSectionTutor.Fragment.SchoolTutorFeeFragment">

    <include
        android:id="@+id/include"
        layout="@layout/custom_tool_bar_second"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rel_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:padding="10dp">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fillViewport="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cv_class"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:background="@drawable/edit_box_round_corner"
                                        android:padding="7dp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/edit_box_round_corner"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:padding="@dimen/space_4"
                                                android:src="@drawable/ic_baseline_filter_list_24"
                                                app:tint="@color/gray" />

                                            <LinearLayout
                                                android:id="@+id/liner2"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/img_live"
                                                android:layout_centerInParent="true"
                                                android:gravity="center_vertical"
                                                android:orientation="horizontal">

                                                <FrameLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:elevation="1dp">


                                                    <Spinner
                                                        android:id="@+id/class_spinner"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:autofillHints="Select your Company Name"
                                                        android:overlapAnchor="false">

                                                    </Spinner>

                                                    <TextView
                                                        android:id="@+id/tv_class"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginStart="2dp"
                                                        android:text=""
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/space_12sp"
                                                        android:textStyle="bold"
                                                        tools:ignore="TextViewEdits" />


                                                </FrameLayout>

                                            </LinearLayout>

                                            <!--                                <TextView-->
                                            <!--                                        android:layout_marginStart="2dp"-->
                                            <!--                                        android:layout_width="match_parent"-->
                                            <!--                                        android:layout_height="wrap_content"-->
                                            <!--                                        android:layout_below="@id/img_live"-->
                                            <!--                                        android:layout_centerInParent="true"-->
                                            <!--                                        android:text="12th"-->
                                            <!--                                    tools:ignore="TextViewEdits"-->
                                            <!--                                        android:textColor="@color/black"-->
                                            <!--                                        android:textSize="@dimen/space_12sp"-->
                                            <!--                                        android:textStyle="bold" />-->
                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:gravity="center"
                                                android:src="@drawable/ic_arrow_down_24"
                                                app:tint="@color/gray" />


                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>


                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cv_section"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_toEndOf="@id/cv_class"
                                        android:background="@drawable/edit_box_round_corner"
                                        android:padding="7dp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/edit_box_round_corner"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:padding="@dimen/space_4"
                                                android:src="@drawable/ic_baseline_filter_list_24"
                                                app:tint="@color/gray" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/img_live"
                                                android:layout_centerInParent="true"
                                                android:layout_marginStart="2dp"
                                                android:gravity="center_vertical"
                                                android:orientation="horizontal">

                                                <FrameLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:elevation="1dp">


                                                    <Spinner
                                                        android:id="@+id/section_spinner"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:autofillHints="Select your Company Name"
                                                        android:overlapAnchor="false">

                                                    </Spinner>

                                                    <TextView
                                                        android:id="@+id/tv_section"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:text=""
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/space_12sp"
                                                        android:textStyle="bold"
                                                        tools:ignore="TextViewEdits" />


                                                </FrameLayout>

                                            </LinearLayout>
                                            <!--                                            <TextView-->
                                            <!--                                                android:layout_width="match_parent"-->
                                            <!--                                                android:layout_height="wrap_content"-->
                                            <!--                                                android:layout_below="@id/img_live"-->
                                            <!--                                                android:layout_centerInParent="true"-->
                                            <!--                                                android:layout_marginStart="2dp"-->
                                            <!--                                                android:text="A"-->
                                            <!--                                                android:textColor="@color/black"-->
                                            <!--                                                android:textSize="@dimen/space_12sp"-->
                                            <!--                                                android:textStyle="bold"-->
                                            <!--                                                tools:ignore="TextViewEdits" />-->

                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:gravity="center"
                                                android:src="@drawable/ic_arrow_down_24"
                                                app:tint="@color/gray" />


                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cv_month"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_toEndOf="@id/cv_section"
                                        android:background="@drawable/edit_box_round_corner"
                                        android:padding="7dp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/edit_box_round_corner"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:padding="@dimen/space_4"
                                                android:src="@drawable/ic_baseline_filter_list_24"
                                                app:tint="@color/gray" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/img_live"
                                                android:layout_centerInParent="true"
                                                android:layout_marginStart="2dp"
                                                android:orientation="horizontal">

                                                <FrameLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:elevation="1dp">


                                                    <Spinner
                                                        android:id="@+id/month_spinner"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:autofillHints="Select your Company Name"
                                                        android:overlapAnchor="false">

                                                    </Spinner>

                                                    <TextView
                                                        android:id="@+id/tv_month"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:text=""
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/space_12sp"
                                                        android:textStyle="bold"
                                                        tools:ignore="TextViewEdits" />


                                                </FrameLayout>

                                            </LinearLayout>

                                            <!--                                            <TextView-->
                                            <!--                                                android:layout_width="match_parent"-->
                                            <!--                                                android:layout_height="wrap_content"-->
                                            <!--                                                android:layout_below="@id/img_live"-->
                                            <!--                                                android:layout_centerInParent="true"-->
                                            <!--                                                android:layout_marginStart="2dp"-->
                                            <!--                                                android:text="March"-->
                                            <!--                                                android:textColor="@color/black"-->
                                            <!--                                                android:textSize="@dimen/space_12sp"-->
                                            <!--                                                android:textStyle="bold" />-->

                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:gravity="center"
                                                android:src="@drawable/ic_arrow_down_24"
                                                app:tint="@color/gray" />


                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>


                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cv_fee_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_toEndOf="@id/cv_month"
                                        android:background="@drawable/edit_box_round_corner"
                                        android:padding="7dp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/edit_box_round_corner"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:padding="@dimen/space_4"
                                                android:src="@drawable/ic_baseline_filter_list_24"
                                                app:tint="@color/gray" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/img_live"
                                                android:layout_centerInParent="true"
                                                android:gravity="center_vertical"
                                                android:layout_marginStart="2dp"
                                                android:orientation="horizontal">

                                                <FrameLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:elevation="1dp">


                                                    <Spinner
                                                        android:id="@+id/status_spinner"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:autofillHints="Select your Company Name"
                                                        android:overlapAnchor="false">

                                                    </Spinner>

                                                    <TextView
                                                        android:id="@+id/tv_fee_status"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:text=" "
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/space_12sp"
                                                        android:textStyle="bold"
                                                        tools:ignore="TextViewEdits" />


                                                </FrameLayout>

                                            </LinearLayout>

                                            <!--                                            <TextView-->
                                            <!--                                                android:layout_width="match_parent"-->
                                            <!--                                                android:layout_height="wrap_content"-->
                                            <!--                                                android:layout_below="@id/img_live"-->
                                            <!--                                                android:layout_centerInParent="true"-->
                                            <!--                                                android:layout_marginStart="2dp"-->
                                            <!--                                                android:text="Paid"-->
                                            <!--                                                android:textColor="@color/black"-->
                                            <!--                                                android:textSize="@dimen/space_12sp"-->
                                            <!--                                                android:textStyle="bold" />-->

                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:gravity="center_vertical"
                                                android:src="@drawable/ic_arrow_down_24"
                                                app:tint="@color/gray" />


                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                </RelativeLayout>
                            </HorizontalScrollView>

                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_showlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rel_detail"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/lin_rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@color/black"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tv_student"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="@dimen/space_1dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/space_8dp"
                                    android:paddingEnd="@dimen/space_8dp"
                                    android:text="Student"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/space_13sp" />

                                <TextView
                                    android:id="@+id/tv_fee"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/space_1dp"
                                    android:layout_marginEnd="@dimen/space_1dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/space_8dp"
                                    android:paddingEnd="@dimen/space_8dp"
                                    android:text="Fee"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/space_13sp"

                                    />

                                <TextView
                                    android:id="@+id/tv_status"
                                    android:layout_width="140dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/space_1dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/space_8dp"
                                    android:paddingEnd="@dimen/space_8dp"
                                    android:text="Status"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/space_13sp" />
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rec_fee_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lin_rec"
                            android:layout_centerInParent="true"
                            android:layout_margin="20dp"
                            android:text="Update"
                            android:textAllCaps="false"
                            android:textColor="@color/white">

                        </androidx.appcompat.widget.AppCompatButton>
                    </RelativeLayout>

                </RelativeLayout>


            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>
</RelativeLayout>