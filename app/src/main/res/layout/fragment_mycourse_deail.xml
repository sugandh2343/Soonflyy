<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_Pannel.Mycourse_deailFragment">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/view2"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/space_4dp"
                    android:paddingEnd="@dimen/space_4dp"
                    android:id="@+id/lin_about"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/iv_about"
                        android:layout_width="24dp"
                        android:layout_height="@dimen/space_24dp"
                        android:src="@drawable/s_about_course"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tv_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_marginStart="@dimen/space_4dp"
                        android:text="About Course"
                        android:textColor="@color/black"
                       android:fontFamily="@font/sfuitext_semibold"/>
                </LinearLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_width="@dimen/space_1dp"
                    android:layout_height="50dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/space_4dp"
                    android:paddingEnd="@dimen/space_4dp"
                    android:id="@+id/lin_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/iv_subject"

                        android:layout_width="24dp"
                        android:layout_height="@dimen/space_24dp"

                        android:src="@drawable/ic_baseline_list_24"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tv_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_4dp"
                        android:text="Subjects"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfuitext_semibold" />
                </LinearLayout>

                <View
                    android:id="@+id/view_chpter"
                    android:layout_width="@dimen/space_1dp"
                    android:layout_height="50dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/space_4dp"
                    android:paddingEnd="@dimen/space_4dp"
                    android:id="@+id/lin_note"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/iv_note"

                        android:layout_width="24dp"
                        android:layout_height="@dimen/space_24dp"
                        android:src="@drawable/s_notice_icon"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tv_note"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_4dp"
                        android:text="Notice"
                        android:textColor="@color/black"
                       android:fontFamily="@font/sfuitext_semibold" />
                </LinearLayout>
                <!-- android:layout_marginLeft="@dimen/space_7dp"-->
                <View
                    android:id="@+id/view5"
                    android:layout_width="@dimen/space_1dp"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_pdf"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/pdf_img"
                        android:layout_width="@dimen/space_24dp"
                        android:layout_height="@dimen/space_24dp"
                        android:layout_marginLeft="@dimen/space_10dp"
                        android:layout_marginTop="@dimen/space_10dp"
                        android:layout_marginBottom="@dimen/space_10dp"
                        android:padding="4dp"
                        android:src="@drawable/pdf_black" />

                    <TextView
                        android:id="@+id/pdf_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_10dp"
                        android:layout_marginTop="@dimen/space_10dp"
                        android:layout_marginBottom="@dimen/space_10dp"

                        android:fontFamily="@font/lexend"
                        android:padding="4dp"
                        android:paddingHorizontal="@dimen/space_10dp"
                        android:text="Pdf"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view6"
                    android:layout_width="@dimen/space_1dp"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:visibility="visible" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/space_4dp"
                    android:paddingEnd="@dimen/space_4dp"
                    android:id="@+id/lin_test"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_test"
                        android:layout_width="24dp"
                        android:layout_height="@dimen/space_24dp"
                        android:src="@drawable/test_icon"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tv_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_4dp"
                        android:text="Test"
                        android:textColor="@color/black"
                      android:fontFamily="@font/sfuitext_semibold"/>
                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearlayout"
        android:background="@color/black" />

    <include
        android:id="@+id/include_assign_profile"
        layout="@layout/row_assign_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/frame_layout_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/include_assign_profile"
        android:layout_marginTop="8dp">


    </FrameLayout>


</RelativeLayout>