<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Common_Package.IDSection.IDSectionFragment">
        <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:scrollbars="none">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@id/view2"
                                android:orientation="horizontal">

                                <LinearLayout
                                        android:id="@+id/lin_basicdetail"
                                        android:layout_width="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/space_4dp"
                                    android:paddingEnd="@dimen/space_4dp"
                                        android:layout_height="50dp">

                                        <ImageView
                                                android:id="@+id/iv_basic"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"

                                                android:src="@drawable/ic_person"
                                                app:tint="@color/black" />

                                        <TextView
                                                android:id="@+id/tv_basic"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                               android:layout_marginStart="@dimen/space_4dp"
                                            android:fontFamily="@font/sfuitext_semibold"
                                                android:text="Basic Details"
                                                android:textColor="@color/black"

                                                android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                        android:id="@+id/view4"
                                        android:layout_width="@dimen/space_1dp"
                                        android:layout_height="50dp"
                                        android:background="@color/black" />

                                <LinearLayout
                                        android:id="@+id/lin_activity"
                                        android:layout_width="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/space_4dp"
                                    android:paddingEnd="@dimen/space_4dp"
                                        android:layout_height="50dp">

                                        <ImageView
                                            android:id="@+id/iv_activity"

                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:src="@drawable/ic_baseline_star_24"
                                            app:tint="@color/black" />

                                        <TextView
                                                android:id="@+id/tv_activity"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/space_4dp"
                                            android:fontFamily="@font/sfuitext_semibold"
                                                android:text="Activity"
                                                android:textColor="@color/black"
                                                android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                        android:id="@+id/view_chpter"
                                        android:layout_width="@dimen/space_1dp"
                                        android:layout_height="50dp"
                                        android:background="@color/black" />

                                <LinearLayout
                                        android:id="@+id/lin_achievement"
                                        android:layout_width="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/space_4dp"
                                    android:paddingEnd="@dimen/space_4dp"
                                        android:layout_height="50dp">

                                        <ImageView
                                                android:id="@+id/iv_achievement"

                                                android:layout_width="24dp"
                                                android:layout_height="@dimen/space_24dp"
                                                android:src="@drawable/s_achievement"
                                                app:tint="@color/black" />

                                        <TextView
                                                android:id="@+id/tv_achievement"

                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/space_4dp"
                                            android:fontFamily="@font/sfuitext_semibold"
                                                android:text="Achievement"
                                                android:textColor="@color/black"
                                                android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                        android:id="@+id/view6"
                                        android:layout_width="@dimen/space_1dp"
                                        android:layout_height="50dp"
                                        android:background="@color/black"
                                        android:visibility="visible" />

                                <LinearLayout
                                        android:id="@+id/lin_other"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/space_4dp"
                                    android:paddingEnd="@dimen/space_4dp"
                                        android:visibility="visible">

                                        <ImageView
                                                android:id="@+id/iv_other"
                                                android:layout_width="24dp"
                                                android:layout_height="@dimen/space_24dp"

                                                android:src="@drawable/s_other"
                                                app:tint="@color/black" />

                                        <TextView
                                                android:id="@+id/tv_other"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/space_4dp"
                                            android:fontFamily="@font/sfuitext_semibold"
                                                android:text="Other"
                                                android:textColor="@color/black"
                                                android:textSize="14sp" />
                                </LinearLayout>

                        </LinearLayout>

                </HorizontalScrollView>


        </LinearLayout>

        <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linearlayout"
                android:background="@color/black" />

        <FrameLayout
                android:id="@+id/frame_layout_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view3">


        </FrameLayout>



</RelativeLayout>