<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_edit_text_shadow_bg"
    android:backgroundTint="@color/white"
    android:layout_margin="@dimen/space_8dp">
    <TextView
        android:id="@+id/tv_udpate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="4dp"
        android:text="New Chapter"
        android:textAlignment="center"
        android:textColor="@color/graient2"
        android:textSize="16sp"
        android:fontFamily="@font/sfuitext_bold" />
    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/light_brown"/>
    <TextView
        android:id="@+id/tv_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:padding="4dp"
        android:text="Chapter Title*"
        android:textAllCaps="false"
        android:textColor="@color/black"
       android:fontFamily="@font/sfuitext_semibold" />

    <EditText

        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/drawable_edit_text_shadow_bg"
        android:hint="Enter chapter title"
        android:padding="@dimen/space_12"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_gravity="center"

        android:layout_margin="12dp"
        android:gravity="center"
        android:text="Create Chapter"
        android:textAllCaps="false"
        android:textColor="#fff"

         />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_10dp"
        android:layout_marginTop="@dimen/space_5"
        android:text="@string/action_cancel"
        android:layout_marginBottom="@dimen/space_8dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/red"
        android:fontFamily="@font/sfuitext_semibold"
        android:textSize="@dimen/all_tvsize16" />



</LinearLayout>