<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lnr_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

<!--                        <ImageView-->
<!--                            android:layout_width="@dimen/login_logo_size120"-->
<!--                            android:layout_height="@dimen/login_logo_size120"-->
<!--                            android:layout_alignParentStart="true"-->
<!--                            android:layout_gravity="top"-->
<!--                            android:padding="4dp"-->
<!--                            android:scaleType="centerCrop"-->
<!--                            android:src="@drawable/logoo" />-->
                        <ImageView
                            android:layout_width="@dimen/login_logo_size120"
                            android:layout_height="@dimen/login_logo_size120"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="top"
                            android:layout_marginStart="-6dp"
                            android:src="@drawable/logo_new"
                            />

                        <TextView
                            android:visibility="gone"
                            android:layout_marginTop="-14dp"
                            android:layout_width="@dimen/login_logo_size120"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textSize="7dp"
                            android:letterSpacing="-0.1"
                            android:gravity="center"
                            android:text="@string/app_name_txt"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="@string/welcome_to_independent_tutor_section"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                           android:fontFamily="@font/sfuitext_semibold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.2"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_indp_tutor" />
                </RelativeLayout>

        </LinearLayout>

</RelativeLayout>