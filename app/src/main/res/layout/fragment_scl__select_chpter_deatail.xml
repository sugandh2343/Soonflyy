<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".YourSchooolPannel.SchoolCoachingSection.SchoolCoachingSectionTutor.Fragment.Scl_SelectChpterDeatailFragment">

        <include
            android:visibility="gone"
            android:id="@+id/include"
            layout="@layout/custom_tool_bar_second" />

        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/light_grey"
            android:elevation="5dp"
            android:gravity="center_vertical"
            android:text="teaacher anme"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />
        <View
            android:id="@+id/line_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_teacher_name"
            android:background="@color/black" />
        <LinearLayout
                android:layout_below="@id/line_top"
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:scrollbars="none">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@id/view2"
                                android:orientation="horizontal">

                                <LinearLayout
                                        android:id="@+id/lin_live_class"
                                        android:layout_width="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/space_4dp"
                                    android:paddingEnd="@dimen/space_4dp"
                                        android:layout_height="50dp">

                                        <ImageView
                                                android:id="@+id/iv_liveclass"
                                                android:layout_width="24dp"
                                                android:layout_height="@dimen/space_24dp"
                                                android:src="@drawable/ic_live"
                                                app:tint="@color/black" />

                                        <TextView
                                                android:id="@+id/tv_liveclass"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                               android:fontFamily="@font/sfuitext_semibold"
                                                android:text="Live Classes"
                                            android:layout_marginStart="@dimen/space_4dp"
                                                android:textColor="@color/black"
                                                android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                        android:id="@+id/view4"
                                        android:layout_width="@dimen/space_1dp"
                                        android:layout_height="50dp"
                                        android:background="@color/black" />

                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/space_4dp"
                                    android:paddingEnd="@dimen/space_4dp"
                                        android:id="@+id/lin_video"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp">

                                        <ImageView
                                                android:id="@+id/iv_video"

                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:src="@drawable/s_video_icon"
                                                app:tint="@color/black" />

                                        <TextView
                                                android:id="@+id/tv_video"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Video"

                                            android:layout_marginStart="@dimen/space_4dp"
                                            android:textColor="@color/black"
                                            android:textSize="14sp"  />
                                </LinearLayout>

                                <View
                                        android:id="@+id/view_chpter"
                                        android:layout_width="@dimen/space_1dp"
                                        android:layout_height="50dp"
                                        android:background="@color/black" />

                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/space_4dp"
                                    android:paddingEnd="@dimen/space_4dp"
                                        android:id="@+id/lin_note"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp">

                                        <ImageView
                                                android:id="@+id/iv_note"

                                                android:layout_width="24dp"
                                                android:layout_height="@dimen/space_24dp"

                                                android:src="@drawable/s_notes_icon"
                                                app:tint="@color/black" />

                                        <TextView
                                                android:id="@+id/tv_note"

                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"

                                                android:text="Notes"
                                            android:layout_marginStart="@dimen/space_4dp"
                                            android:textColor="@color/black"
                                            android:textSize="14sp"  />
                                </LinearLayout>
                                <!-- android:layout_marginLeft="@dimen/space_7dp"-->
                                <View
                                        android:id="@+id/view5"
                                        android:layout_width="@dimen/space_1dp"
                                        android:layout_height="50dp"
                                        android:background="@color/black"
                                        android:visibility="visible" />

                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/space_4dp"
                                    android:paddingEnd="@dimen/space_4dp"
                                        android:id="@+id/lin_notice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:visibility="visible">

                                        <ImageView
                                                app:tint="@color/black"
                                                android:id="@+id/iv_notice"
                                                android:layout_width="@dimen/space_24dp"
                                                android:layout_height="@dimen/space_24dp"
                                                android:src="@drawable/ic_notification" />

                                        <TextView
                                                android:id="@+id/tv_notice"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Notice"
                                            android:layout_marginStart="@dimen/space_4dp"
                                            android:textColor="@color/black"
                                            android:textSize="14sp"  />
                                </LinearLayout>

                                <View
                                        android:id="@+id/view6"
                                        android:layout_width="@dimen/space_1dp"
                                        android:layout_height="50dp"
                                        android:background="@color/black"
                                        android:visibility="visible" />

                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/space_4dp"
                                    android:paddingEnd="@dimen/space_4dp"
                                        android:id="@+id/lin_test"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:visibility="visible">

                                        <ImageView
                                                android:id="@+id/iv_test"
                                                android:layout_width="24dp"
                                                android:layout_height="@dimen/space_24dp"

                                                android:src="@drawable/test_icon"
                                                app:tint="@color/black" />

                                        <TextView
                                                android:id="@+id/tv_test"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Test"
                                            android:layout_marginStart="@dimen/space_4dp"
                                            android:textColor="@color/black"
                                            android:textSize="14sp"  />
                                </LinearLayout>

                        </LinearLayout>

                </HorizontalScrollView>


        </LinearLayout>

        <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linearlayout"
                android:background="@color/black" />

        <FrameLayout
            android:id="@+id/frame_layout_live"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view3"
            android:layout_marginTop="16dp">


        </FrameLayout>



</RelativeLayout>