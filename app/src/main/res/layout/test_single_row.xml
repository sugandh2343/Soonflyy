<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/cl_subsription"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/space_6dp"
        android:layout_marginTop="@dimen/space_6dp"
        android:layout_marginEnd="@dimen/space_6dp"
        android:layout_marginBottom="@dimen/space_6dp"
        android:background="@color/light_grey"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:src="@drawable/test_list_icon"
            app:tint="@color/Accent_color" />

        <TextView
            android:id="@+id/header_tittle_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/sfuitext_semibold"
            app:layout_constraintEnd_toStartOf="@+id/delete_img"
            app:layout_constraintStart_toEndOf="@id/img"
            app:layout_constraintTop_toTopOf="@id/img" />

        <ImageView
            android:id="@+id/delete_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_red_24"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/header_tittle_tv"
            app:tint="@color/primary_color" />

        <TextView
            android:id="@+id/free_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/space_10dp"
            android:text="Free "
            android:textColor="@color/black"
            android:textSize="@dimen/space_16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2dp"
            android:layout_marginEnd="@dimen/space_10dp"
            android:gravity="center_horizontal"
            android:text="Rs.15000/-"
            android:textColor="@color/black"
            android:textSize="@dimen/space_8sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/free_title"
            app:layout_constraintStart_toStartOf="@+id/free_title"
            app:layout_constraintTop_toBottomOf="@+id/free_title" />

        <TextView
            android:id="@+id/header_sub_tittle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/space_12dp"
            android:layout_marginBottom="@dimen/space_5"
            android:text="@string/energy_matter_force_material_and_all_the_laws_related_to_them_the_typically_work_in_high_school"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/img"
            app:layout_constraintEnd_toStartOf="@id/free_title"
            app:layout_constraintStart_toStartOf="@id/header_tittle_tv"
            app:layout_constraintTop_toBottomOf="@id/header_tittle_tv" />

        <TextView
            android:id="@+id/btn_start"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/space_8dp"
            android:text="Start now"
            android:fontFamily="@font/sfuitext_medium"
            android:alpha="1"
            android:gravity="center"
            android:background="@drawable/bg_button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </LinearLayout>


</RelativeLayout>