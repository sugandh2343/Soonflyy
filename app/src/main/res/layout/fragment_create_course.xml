<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_Pannel.CreateCourseFragment">

    <include
        android:visibility="gone"
        android:id="@+id/include"
        layout="@layout/custom_tool_bar_second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel_assign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/include_livedemo"
                    layout="@layout/layout_live_demo_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4dp" />

                <include
                    android:id="@+id/include_assign"
                    layout="@layout/layout_assign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/include_livedemo"
                    android:layout_marginTop="@dimen/space_4dp" />

                <LinearLayout
                    android:id="@+id/lin_chagne_creator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_40dp"
                    android:layout_below="@+id/include_assign"
                    android:layout_marginTop="@dimen/space_6dp"
                    android:background="@color/graient1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/space_20dp"
                        android:layout_height="@dimen/space_20dp"
                        android:src="@drawable/s_edit_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_6dp"
                        android:fontFamily="@font/sfuitext_semibold"
                        android:text="Change Course Creator"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_14sp" />
                </LinearLayout>

                <include
                    android:id="@+id/include_creator"
                    layout="@layout/row_course_creator_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_chagne_creator"
                    android:layout_marginTop="@dimen/space_6dp" />
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/space_4dp"
                    android:paddingBottom="@dimen/space_4dp"
                    android:layout_below="@+id/include_creator"
                    android:id="@+id/rel_profile">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/assign_iv_profile_img"
                        android:layout_width="@dimen/space_50dp"
                        android:layout_height="@dimen/space_50dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/logoo"
                        app:civ_border_color="@color/light_gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/assign_iv_profile_img"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/space_4dp"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lin_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_toLeftOf="@+id/btn_profile"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfuitext_medium"
                                android:text="Assigned by"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_10sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/assign_tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-6dp"
                                android:fontFamily="@font/sfuitext_semibold"
                                android:text="Name"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14sp" />


                        </LinearLayout>
                        <ImageView
                            android:id="@+id/assign_tv_mobile"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="16dp"
                            android:visibility="visible"
                            android:src="@drawable/ic_pending"
                            android:layout_gravity="center"
                            android:textColor="@color/red"
                            android:textSize="@dimen/space_10sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_profile"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="@dimen/space_8dp"
                            android:fontFamily="@font/sfuitext_semibold"
                            android:gravity="center"
                            android:text="Profile"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textSize="@dimen/space_10sp"
                            android:visibility="visible" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rel_assign"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:layout_marginTop="@dimen/space_6dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/titel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"

                    android:fontFamily="@font/sfuitext_semibold"
                    android:text="Course Title*"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@drawable/drawable_edit_text_shadow_bg"
                    android:hint="@string/Enter_Course_Name"
                    android:padding="@dimen/space_12" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"

                    android:fontFamily="@font/sfuitext_semibold"
                    android:text="Choose Category*"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/liner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:elevation="1dp">


                        <Spinner
                            android:id="@+id/sub_category_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autofillHints="Select your Company Name"
                            android:overlapAnchor="false">

                        </Spinner>

                        <TextView
                            android:id="@+id/sub_cat_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/drawable_edit_text_shadow_bg"
                            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_black_24dp"
                            android:fontFamily="@font/sfuitext_medium"
                            android:hint="Choose category"
                            android:inputType="text"
                            android:padding="13dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            tools:ignore="TextViewEdits" />

                    </FrameLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_15"
                    android:text="@string/create_your_course_here_we_go"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_12"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:background="@drawable/drawable_edit_text_shadow_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_10">

                        <TextView

                            android:id="@+id/tv_updateVideo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/space_5"
                            android:fontFamily="@font/sfuitext_semibold"

                            android:padding="@dimen/space_3"
                            android:text="Upload Course Cover(Banner)"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/iv_video"
                            android:layout_width="@dimen/space_30"
                            android:layout_height="@dimen/space_30"
                            android:src="@drawable/ic_baseline_arrow_up_24"
                            android:visibility="gone"
                            app:tint="@color/black" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_2dp"
                        android:layout_marginTop="@dimen/space_2dp"
                        android:background="@color/light_grey" />

                    <LinearLayout
                        android:id="@+id/lin_upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_4"
                        android:elevation="@dimen/space_5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/space_10"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/upload_course_video"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/upload_button"
                            android:visibility="visible" />
                        <!--  </androidx.cardview.widget.CardView>-->
                        <RelativeLayout
                            android:id="@+id/rel_cover_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/upload_course"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginBottom="12dp"
                                android:background="@drawable/drawable_edit_text_shadow_bg"
                                android:scaleType="fitXY"
                                android:src="@drawable/live_lecture"
                                android:visibility="visible" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/cancel_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginStart="6dp"
                                android:src="@drawable/ic_baseline_cancel_24" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_image_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8"
                            android:fontFamily="@font/sfuitext_medium"
                            android:text="Upload your file here,Choose file from your device"
                            android:textAlignment="center"
                            android:textColor="#434242"
                            android:textSize="@dimen/space_12" />


                        <LinearLayout
                            android:id="@+id/lin_video_file"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_5dp"
                                android:text="Selected Videos"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_12" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rc_select_video"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_uploaded_file"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_5dp"
                                android:text="Uploaded Videos"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_12" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rc_uploaded_video"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_2dp"
                        android:layout_marginTop="@dimen/space_2dp"
                        android:background="@color/light_grey" />

                    <LinearLayout
                        android:id="@+id/lin_pdf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/drawable_edit_text_shadow_bg"
                        android:elevation="@dimen/space_5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/space_10"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="100dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:layout_margin="@dimen/space_5"
                                android:padding="@dimen/space_5"
                                android:src="@drawable/upload_24px"
                                app:tint="@color/white" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_15"
                            android:text="Upload your file here,Choose file for creating a playlist"
                            android:textAlignment="center"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/space_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_10"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_liveclass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/video_call_24px"
                            android:drawablePadding="@dimen/space_5"
                            android:padding="@dimen/space_3"
                            android:text="Schedule Live Session"
                            android:textColor="@color/black"
                            android:textSize="@dimen/space_14" />

                        <ImageView
                            android:layout_width="@dimen/space_30"
                            android:layout_height="@dimen/space_30"
                            android:src="@drawable/ic_baseline_calendar_today_24"
                            app:tint="@color/black" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_2dp"
                        android:layout_marginTop="@dimen/space_2dp"
                        android:background="@color/light_grey" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_course"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:fontFamily="@font/sfuitext_semibold"
                            android:text="Course Provides*"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/min_thumbnail_img"
                            android:layout_width="@dimen/space_30"
                            android:layout_height="@dimen/space_30"
                            android:src="@drawable/ic_arrow_down_24"
                            android:visibility="gone"
                            app:tint="@color/black" />
                    </LinearLayout>
                    <!-- android:src="@drawable/upload_24px"-->
                    <ImageView
                        android:id="@+id/course_thumbnail"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/space_3dp"
                        android:src="@drawable/ic_baseline_image_24"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recv_course"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_12"
                        android:fontFamily="@font/sfuitext_semibold"
                        android:text="Course Offers"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:id="@+id/lin_offer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/space_10"
                        android:background="@drawable/drawable_edit_text_shadow_bg"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_12dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_courseoffer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/sfuitext_medium"
                            android:hint="Choose free course"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/iv_dropdwn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.6"
                            android:src="@drawable/ic_dropdown"
                            app:tint="@color/black" />

                        <ImageView
                            android:id="@+id/iv_dropup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.6"
                            android:src="@drawable/ic_arrowup"
                            android:visibility="gone"
                            app:tint="@color/black" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_live_demo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_12"
                        android:fontFamily="@font/sfuitext_semibold"
                        android:text="Live Class Demo"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_live_demo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:background="@drawable/drawable_edit_text_shadow_bg"
                        android:hint="Enter no of live class demo"
                        android:inputType="number"
                        android:padding="@dimen/space_12" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin_expiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_12"
                        android:fontFamily="@font/sfuitext_semibold"
                        android:text="Expiry Date"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_expiry"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/space_16dp"
                        android:background="@drawable/drawable_edit_text_shadow_bg"
                        android:drawableEnd="@drawable/ic_baseline_calendar_month_24"
                        android:drawablePadding="@dimen/space_10dp"
                        android:fontFamily="@font/sfuitext_medium"
                        android:gravity="center_vertical"
                        android:hint="Expiry date"
                        android:paddingStart="12dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_14sp"
                        app:drawableTint="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_addtionaldeatal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_12"
                        android:fontFamily="@font/sfuitext_semibold"
                        android:text="Additional Details"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_add_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:background="@drawable/drawable_edit_text_shadow_bg"
                        android:hint="Enter here"
                        android:inputType="textMultiLine"
                        android:padding="@dimen/space_12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_12"
                        android:fontFamily="@font/sfuitext_semibold"
                        android:text=" About Course* "
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_about_course"
                        android:layout_width="match_parent"
                        android:layout_height="124dp"

                        android:layout_marginTop="@dimen/space_10"
                        android:background="@drawable/drawable_edit_text_shadow_bg"
                        android:gravity="top"
                        android:hint="Enter here"
                        android:padding="@dimen/space_12" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/space_5"
                        android:fontFamily="@font/sfuitext_semibold"
                        android:text="Course Type"
                        android:textAlignment="center"
                        android:textColor="@color/black" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:elevation="1dp">


                            <Spinner
                                android:id="@+id/type_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:autofillHints="Select your Company Name"
                                android:overlapAnchor="false">

                            </Spinner>

                            <TextView
                                android:id="@+id/tpe_tv"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:background="@drawable/drawable_edit_text_shadow_bg"
                                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_black_24dp"
                                android:fontFamily="@font/sfuitext_medium"
                                android:gravity="center_vertical"
                                android:hint="Type"
                                android:inputType="text"
                                android:paddingStart="12dp"
