<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/drawable_edit_text_shadow_bg"
    android:backgroundTint="#CC000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/space_25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_arrow_left_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quality"
            android:textSize="15sp"

            android:textColor="@color/white"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_two_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_two_five"
            android:layout_width="@dimen/space_25dp"
            android:layout_height="25dp"
            android:visibility="visible"
            android:src="@drawable/ic_baseline_done_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto"
            android:textSize="14sp"

            android:textColor="@color/white"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_five"
            android:layout_width="@dimen/space_25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_done_24"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="720p"
            android:textSize="14sp"

            android:textColor="@color/white"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_seven_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_seven_five"
            android:layout_width="@dimen/space_25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_done_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="480p"
            android:textSize="14sp"

            android:textColor="@color/white"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_normal"
            android:layout_width="@dimen/space_25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_done_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="360p"
            android:textSize="14sp"

            android:textColor="@color/white"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_one_two_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_one_two_five"
            android:layout_width="@dimen/space_25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_done_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="240p"

            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_one_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_one_five"
            android:layout_width="@dimen/space_25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_done_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="180p"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            />
    </LinearLayout>


</LinearLayout>